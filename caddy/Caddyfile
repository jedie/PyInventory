# https://caddyserver.com/docs/caddyfile

{$HOSTNAME} {
    tls {$LETSENCRYPT_EMAIL}

    log {
        output stdout
        format console
        level WARN
    }

    header {
        X-Robots-Tag "none"
    }

    respond /robots.txt 200 {
        body "User-agent: *
Disallow: /"
        close
    }

    route {
        file_server /static {
            root /srv/static
        }
        file_server /media {
            root /srv/media
        }
        reverse_proxy inventory:8000
    }
}
